{% extends 'layout.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container p-5 text-center">
    <h1 class="h3 mb-3 font-weight-normal">Please register</h1>
            
        {{ form_start(registrationForm) }}

        {{ form_label(registrationForm.email, 'Email') }}
        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control mb-3'}}) }}   

        {{ form_label(registrationForm.username, 'Identifiant') }}
        {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control mb-3'}}) }}   

       
        {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control mb-3'}}) }}   
     
       

        {% if not registrationForm.vars.valid %}
        <div class="alert alert-danger">
            {{ form_errors(registrationForm.email) }} 
            {{ form_errors(registrationForm.plainPassword) }} 
        </div>
        {% endif %}

        <button class="btn btn-lg btn-primary">Register</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}