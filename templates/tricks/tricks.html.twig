{% extends 'layout.html.twig' %}

{% block title %}Tricks{% endblock %}

{% block body %}
    <div class="container p-5">
        <h1 class="display-4 text-center">Voici la liste des tricks</h1>
        {% if not app.user %}
            <p class="lead mt-3">
                Pour en ajouter, merci de vous identifier ou vous enregister.
            </p>
            <a href="{{ path('app_login') }}" class="btn btn-success">S'identifier</a>
            <a href="{{ path('app_register') }}" class="btn btn-primary">S'enregister</a>
        {% endif %}
        {% if app.user %}
            <a href="{{ path('app_login') }}" class="btn btn-success mt-3">Ajouter un trick</a>
        {% endif %}
        {% include 'tricks/trickslist.html.twig' %}
    </div>
{% endblock %}
